<div class="row branches-form">
  <%= simple_form_for [:admin, @branch], remote: true do |f| %>
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <%= f.input :name %>
        </div>
        <div class="col-md-6">
          <%= f.input :manager_id, collection: User.all, label_method: :username, input_html: { class: "max-width" } %>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <%= f.input :description, as: :text %>
    </div>
    <div class="col-md-12">
      <hr>
      <%= f.submit "Guardar", class: "btn btn-primary pull-right" %>
    </div>
  <% end %>
</div>