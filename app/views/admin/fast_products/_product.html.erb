
<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 finished-product" data-product-id="<%= product.id %>">
  <div class="box-shadowed rounded-corners panel">
    <div class="panel-body row">
      <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 hyphenate">
          <strong>SKU: </strong><span><%= product.sku %></span>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 hyphenate">
          <strong>Nombre: </strong><span><%= product.name %></span>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 hyphenate">
          <strong>Precio: </strong><span><%= product.price %></span>
        </div>
      </div>
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 remove-fast-product-thumbnail">
        <ul class="list-unstyled">
          <li>
            <%= link_to edit_admin_product_path(product), remote: true, class: "btn btn-primary text-center pull-right" do %>
              <%= fa_icon "pencil-square-o" %>
            <% end %>
            <div class="clearfix"></div>
          </li>
          <li>
            <%= link_to admin_product_path(product), remote: true, class: "btn btn-danger text-center pull-right disableable", method: :delete, data: { confirm: "Â¿Esta seguro? El producto" } do %>
              <%= fa_icon "trash-o" %>
            <% end %>
            <div class="clearfix"></div>
          </li>
        </ul>
        
      </div>
      
    </div>
  </div>
</div>
