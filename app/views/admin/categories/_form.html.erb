<%= simple_form_for [:admin, Category.new], remote: :true do |f| %>
  <%= f.input :name, placeholder: 'Agregar Categoria' %>
  <%= f.submit "Agregar", class: "btn btn-primary pull-right" %> 
<% end %>

<% if @categories.blank? %>
  No hay productos
<% else %>
  <% @categories.each do |category| %>
    <%= category.name %>
    <%= link_to "Borrar", admin_category_path(category), method: :delete, class: "btn btn-danger"%>
  <% end %>
<% end %>