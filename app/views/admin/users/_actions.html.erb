<%= link_to edit_admin_user_path(user), class: "btn btn-primary", data: { toggle: "tooltip" }, title: "Editar", remote: :true do %>
  <%= fa_icon "pencil-square-o" %>
<% end %>

<% if current_user != user %>
  <% if user.deleted? %>
    <%= link_to admin_user_restore_path(user), method: :post, class: "btn btn-danger disableable", data: { toggle: "tooltip", "saving-text": "Restaurando..." }, title: "Restaurar", remote: :true do %>
      <%= fa_icon "undo" %>
    <% end %>
  <% else %>
    <%= link_to "/admin/users/#{user.id}", method: :delete, class: "btn btn-danger disableable", data: { toggle: "tooltip", "saving-text": "Desactivando..." }, title: "Borrar", remote: :true do %>
      <%= fa_icon "power-off" %>
    <% end %>
  <% end %>
<% end %>