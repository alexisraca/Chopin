<% if @user.errors.full_messages.empty? %>
  $("tr[data-user-id='<%= @user.id %>']").fadeOut("slow", function(){
    $(this).remove();
    var users = $("tr[data-user-id]");
    if(!users.length) {
      $("tbody").html("<%= j render 'no_users' %>")
    }
  })
<% end %>

$.notify({ message: "<%= flash[:notice] %>" },{ type: 'success', placement: { align: "center" } });
$.notify({ message: "<%= flash[:alert] %>" },{ type: 'alert', placement: { align: "center" } });
