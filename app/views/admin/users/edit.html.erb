<%= form_for @user, url: admin_user_path, method: :put do |f| %>
  <%= f.label :username %>:
  <%= f.text_field :username %><br />

  <%= f.label :password %>:
  <%= f.text_field :password %><br />

  <%= f.label :password_confirmation %>:
  <%= f.text_field :password_confirmation %><br />

  <%= f.submit %>
<% end %>