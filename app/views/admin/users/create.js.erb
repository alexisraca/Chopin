<% if @user.persisted? %>
  $("#global-modal").modal("hide")
<% else %>
  if($("#global-modal").hasClass('in')) {
    $("#global-modal .modal-body").html("<%= j render partial: 'form'%>")
  } else {
    $("#global-modal").modal("show")
    $("#global-modal .modal-body").html("<%= j render partial: 'form'%>")
  }
<% end %>