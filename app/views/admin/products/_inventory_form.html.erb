<div class="col-md-3 col-lg-3 inventory-thumbnail" <%= inventory_id_data_attr(i.object) %> >
  <div class="panel panel-default">
    <div class="panel-body">
      <%= i.input :quantity, as: :decimal, placeholder: 'Cantidad' %>
      <%= i.input :expiration_date, as: :string, input_html: { class: "datepicker" } %>
      <% if Branch.count > 0 %>
        <%= i.input :branch_id, collection: Branch.all %>
      <% end %>
    </div>
    
    <div class="panel-footer">
      <% if i.object.persisted? %>
        <%= link_to admin_inventory_path(i.object), method: :delete, class: "pull-right btn btn-danger", data: { confirm: "Â¿Esta seguro que desea borrar el inventario de este producto?" }, remote: true do %>
          <%= fa_icon "trash-o" %>
        <% end %>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>