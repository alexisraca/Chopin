<% if flash[:warning].blank? %>
  $("div[data-product-id='<%= @product.id %>']").fadeOut("slow", function(){
    $(this).remove();
    var products = $("div[data-product-id]");
    if(!products.length) {
      $(".fast-products-pool").html("<%= j render '/admin/fast_products/no_products' %>")
    }
  })
  $.notify({ message: "<%= flash[:notice] %>" },{ type: 'success', placement: { align: "center" } });
<% else %>
  $.notify({ message: "<%= flash[:warning] %>" }, { type: 'warning', placement: { align: "center" } });
<% end %>

window.resetButton();