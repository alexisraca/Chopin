<%= form_for @product, url: admin_products_path do |f| %>

  <%= render partial: "/shared/form_errors", locals: { instance: @product } %>

  <%= f.label :name %>
  <%= f.text_field :name %><br />

  <%= f.label :description %>
  <%= f.text_field :description %><br />

  <%= fields_for :variants do |v| %>
    <%= v.label :cost %>
    <%= v.number_field :cost %><br />

    <%= v.label :price %>
    <%= v.number_field :price %><br />

    <%= v.label :sku %>
    <%= v.number_field :sku %><br />
  <% end %>

  <%= f.submit %>
<% end %> 