<%= link_to edit_admin_product_variant_path(variant.product, variant), class: "btn btn-primary", data: { toggle: "tooltip" }, title: "Editar", remote: true do %>
  <%= fa_icon "pencil-square-o" %>
<% end %>

<% unless variant.deleted? %>

  <%= link_to admin_product_variant_path(variant.product, variant), method: :delete, class: "btn btn-danger disableable", data: { toggle: "tooltip", confirm: delete_variant_warning_text(variant), "saving-text": "Desactivando..." }, title: "Desactivar", remote: :true do %>
    <%= fa_icon "power-off" %>
  <% end %>
<% else %>

  <%= link_to admin_product_restore_path(@product, variant), method: :post, class: "btn btn-danger disableable", data: { toggle: "tooltip", confirm: restore_variant_text(variant), "saving-text": "Restaurando..." }, title: "Restaurar", remote: :true do %>
    <%= fa_icon "undo" %>
  <% end %>
<% end %>