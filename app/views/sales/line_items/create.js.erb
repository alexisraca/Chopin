$("#line-items-list-wrapper").replaceWith("<%= j render partial:'sales/statements/statement_panel' %>");
$("#small-global-modal").modal("hide") // para ventana de thumbnails

window.highlightLineItem(parseInt("<%= @line_item.id %>"));

