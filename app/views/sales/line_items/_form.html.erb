<%= simple_form_for @line_item, url: sales_statement_line_items_path(@statement, variant_id: @variant.id), remote: true, html: { id: "new-line-item-modal-form" } do |f| %>
  <div class="row">
    
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="row">
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center">
          <%= link_to "#", class: "btn btn-danger", id: "minus-line-item" do %>
            <%= fa_icon "minus" %>
          <% end %>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center">
          <%= f.input :quantity, label: false, input_html: { value: 1, min: 0, id: "li-amount" } %>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center">
          <%= link_to "#", class: "btn btn-primary", id: "plus-line-item" do %>
            <%= fa_icon "plus" %>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <button class="btn btn-primary full-width disableable" type="submit" data-saving-text="Agregando..." data-target="new-line-item-modal-form">
        <%= fa_icon "shopping-basket" %>
      </button>
    </div>
  </div>
<% end %>