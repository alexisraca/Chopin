<div class="row" id="payment-modal-footer">
  <%= simple_form_for [:sales, @statement, @payment], url: sales_statement_payment_next_path(@statement, @payment), remote: true, method: :put do |f| %>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 full-height">
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 text-left full-height">
        <p class="no-margin lead">Importe:</p>
      </div>
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 text-right full-height">
        <%= f.text_field_tag "payment[total]", nil, class: "form-control text-right", placeholder: "$ 0.00" %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 full-height">
        <button class="btn btn-primary full-width disableable" type="submit" data-saving-text="...">
          Pagar
        </button>
      </div>

      <div class="clearfix"></div>
    </div>
  <% end %>
</div>