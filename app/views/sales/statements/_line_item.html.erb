<tr <%= "data-line-item-id=#{line_item.id}" %>>
  <td>
    <%= link_to "#line_item#{line_item.id}", 
                data: { toggle: "collapse" }, 
                aria: {
                  expanded: "false", 
                  controls: "line_item#{line_item.id}" 
                } do %>
      <%= line_item.variant.name %>
      <%= fa_icon "caret-down" %>
    <% end %>
  </td>
  <td class="text-center">
    <%= line_item.variant.price %>
  </td>
  <td class="text-center" id="inventory-quantity">
    <%= line_item.quantity %>
  </td>
  <td class="text-center">
    <%= line_item.total %>
  </td>
  <td>
    <%= link_to sales_statement_line_item_path(@statement, line_item), method: :delete, class: "btn btn-danger disableable", remote: true do %>
      <%= fa_icon "trash-o" %>
    <% end %>
  </td>
</tr>

<tr <%= "data-for-line-item-id=#{line_item.id}" %>>
  <td colspan="5" class="collapsable-row">
    <div class="collapse row padding-top padding-bottom" id="line_item<%= line_item.id %>">
      <%= simple_form_for line_item, url: sales_statement_line_item_path(@statement, line_item), method: :put, remote: true do |f| %>
        <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
          Actualizar cantidad
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
          <%= f.input :quantity, label: false %>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <%= f.submit "Actualizar", class: "btn btn-primary pull-right" %>
          <div class="clearfix"> </div>
        </div>
      <% end %>
    </div>
  </td>
</tr>