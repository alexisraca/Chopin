<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 nested-fields">
  <div class="panel system-panel">
    <div class="panel-body row">
      <% f.object.build_main_variant unless f.object.main_variant %>
      <%= f.simple_fields_for :main_variant do |v| %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= v.input :sku %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= v.input :name %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= v.input :price %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= link_to_remove_association f, class: "btn btn-danger pull-right" do %>
            <%= fa_icon "trash-o" %>
          <% end %>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>